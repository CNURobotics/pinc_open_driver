<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Joints -->
  <joint name="gripper" type="revolute">
    <parent link="base_link"/>
    <child link="coupler"/>
    <origin xyz="0.053492 0 0.0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-2.44" upper="0" effort="5" velocity="1"/>
  </joint>

  <joint name="base_link_to_right_arm" type="revolute">
    <parent link="base_link"/>
    <child link="right_arm"/>
    <origin xyz="0.053492 -0.03250 -0.008"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.22" upper="0" effort="5" velocity="1"/>
    <mimic joint="gripper" multiplier="0.5" offset="0.0"/>
  </joint>

  <joint name="base_link_to_left_arm" type="revolute">
    <parent link="base_link"/>
    <child link="left_arm"/>
    <origin xyz="0.053492 0.03250 -0.008"/>
    <axis xyz="0 0 1"/>
    <limit lower="1.22" upper="0" effort="5" velocity="1"/>
    <mimic joint="gripper" multiplier="-0.5" offset="0.0"/>
  </joint>

  <joint name="right_arm_to_right_finger" type="revolute">
    <parent link="right_arm"/>
    <child link="right_finger"/>
    <origin xyz="0.034641 0.020 -0.0002"/>
    <axis xyz="0 0 1"/>
    <limit lower="1.22" upper="0" effort="5" velocity="1"/>
    <mimic joint="gripper" multiplier="-0.5" offset="0.0"/>
  </joint>

  <joint name="left_arm_to_left_finger" type="revolute">
    <parent link="left_arm"/>
    <child link="left_finger"/>
    <origin xyz="0.034641 -0.020 0.0002"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.22" upper="0" effort="5" velocity="1"/>
    <mimic joint="gripper" multiplier="0.5" offset="0.0"/>
  </joint>

</robot>
